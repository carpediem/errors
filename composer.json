{
    "name": "carpediem/errors",
    "type": "library",
    "description" : "Capture errors",
    "keywords" : ["erros", "error reporting"],
    "require": {
        "php" : ">=5.4.0"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "^1.11",
        "phpunit/phpunit": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Carpediem\\Errors\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Carpediem\\Errors\\Test\\": "test"
        }
    },
    "scripts": {
        "test": "phpunit --coverage-text; php-cs-fixer fix -v --diff --dry-run;"
    }
}
